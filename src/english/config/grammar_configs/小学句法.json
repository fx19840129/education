      "sentence_structures": [
        {
          "structure_name": "基本语序 (Basic Word Order)",
          "description": "英语句子的基本语序是 SVO (主语-谓语-宾语)，这是最核心的语序规则。",
          "components": ["Subject (S)", "Verb (V)", "Object (O)"],
          "details": "最基础、最常见的句子结构。",
          "examples": [
            {"sentence": "I like apples.", "analysis": "S V O"},
            {"sentence": "She reads a book.", "analysis": "S V O"}
          ]
        },
        {
          "structure_name": "主谓结构 (Subject-Verb)",
          "description": "最简单的句子结构，包含主语和谓语动词。",
          "components": ["Subject (S)", "Verb (V)"],
          "examples": [
            {"sentence": "Birds fly.", "analysis": "S V"},
            {"sentence": "Children sleep.", "analysis": "S V"}
          ]
        },
        {
          "structure_name": "主谓表结构 (Subject-Verb-Complement)",
          "description": "使用系动词（如 be, look, get）连接主语和表语。",
          "components": ["Subject (S)", "Verb (V - Linking Verb)", "Complement (C)"],
          "details": "表语通常是名词或形容词，补充说明主语。",
          "examples": [
            {"sentence": "She is a teacher.", "analysis": "S V C (noun)"},
            {"sentence": "He looks happy.", "analysis": "S V C (adjective)"}
          ]
        },
        {
          "structure_name": "主谓宾结构 (Subject-Verb-Object)",
          "description": "包含主语、及物动词和直接宾语。",
          "components": ["Subject (S)", "Verb (V - Transitive Verb)", "Object (O)"],
          "examples": [
            {"sentence": "I eat bread.", "analysis": "S V O"},
            {"sentence": "They play football.", "analysis": "S V O"}
          ]
        },
        {
          "structure_name": "主谓宾状结构 (Subject-Verb-Object-Adverbial)",
          "description": "在 SVO 基础上增加状语。",
          "components": ["Subject (S)", "Verb (V)", "Object (O)", "Adverbial (A)"],
          "details": "状语通常放在句末。",
          "examples": [
            {"sentence": "She reads a book in the library.", "analysis": "S V O A"},
            {"sentence": "He came home yesterday.", "analysis": "S V O A"}
          ]
        },
        {
          "structure_name": "主谓双宾结构 (Subject-Verb-Indirect Object-Direct Object)",
          "description": "动词后跟两个宾语。",
          "components": ["Subject (S)", "Verb (V)", "Indirect Object (IO)", "Direct Object (DO)"],
