          "examples": [
            {"sentence": "He gave me a pen.", "analysis": "S V IO DO"},
            {"sentence": "He gave a pen to me.", "analysis": "S V O (DO) + prep. phrase"}
          ]
        },
        {
          "structure_name": "主谓宾补结构 (Subject-Verb-Object-Object Complement)",
          "description": "在宾语后跟宾语补足语。",
          "components": ["Subject (S)", "Verb (V)", "Object (O)", "Object Complement (OC)"],
          "details": "宾语补足语通常是形容词或名词。",
          "examples": [
            {"sentence": "They made him happy.", "analysis": "S V O OC"},
            {"sentence": "We elected her monitor.", "analysis": "S V O OC"}
          ]
        }
