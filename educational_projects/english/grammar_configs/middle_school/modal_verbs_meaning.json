{
  "grammar_name": "情态动词-含义用法",
  "level": "初中二年级",
  "category": "进阶语法",
  "difficulty": "medium",
  "description": "学习不同情态动词的具体含义和用法",
  "explanation": {
    "basic_rules": [
      "不同情态动词有不同的含义和用法",
      "can/could表示能力、可能性、请求",
      "may/might表示可能性、请求、允许",
      "must表示必要性、推测",
      "should表示建议、义务、推测"
    ],
    "meaning_usage": [
      "can：能力、可能性、请求",
      "could：过去的能力、礼貌的请求、可能性",
      "may：可能性、请求、允许",
      "might：可能性、礼貌的请求",
      "must：必要性、推测",
      "should：建议、义务、推测"
    ],
    "common_errors": [
      "I can to help you. (错误) → I can help you. (正确)",
      "You may to come in. (错误) → You may come in. (正确)",
      "He must to study hard. (错误) → He must study hard. (正确)"
    ],
    "usage_tips": [
      "注意不同情态动词的含义区别",
      "情态动词后接动词原形",
      "注意情态动词的礼貌程度"
    ]
  },
  "examples": {
    "can_ability": [
      "I can speak English.",
      "She can play the piano.",
      "He can swim very well.",
      "We can solve this problem.",
      "They can help you."
    ],
    "can_possibility": [
      "It can rain tomorrow.",
      "She can be right.",
      "He can come to the party.",
      "We can go to Beijing next week.",
      "They can arrive on time."
    ],
    "can_request": [
      "Can you help me?",
      "Can I borrow your pen?",
      "Can we go now?",
      "Can you open the window?",
      "Can I ask you a question?"
    ],
    "may_possibility": [
      "It may rain tomorrow.",
      "She may come to the party.",
      "He may be right.",
      "We may go to Beijing next week.",
      "They may not arrive on time."
    ],
    "may_request": [
      "May I come in?",
      "May I borrow your pen?",
      "May we go now?",
      "May I ask you a question?",
      "May I use your phone?"
    ],
    "must_necessity": [
      "You must finish your homework.",
      "She must be careful.",
      "He must study hard.",
      "We must arrive on time.",
      "They must follow the rules."
    ],
    "must_speculation": [
      "He must be tired.",
      "She must be at home.",
      "It must be true.",
      "They must be working.",
      "We must be lost."
    ],
    "should_advice": [
      "You should study hard.",
      "She should eat more vegetables.",
      "He should get up early.",
      "We should help each other.",
      "They should be more careful."
    ]
  },
  "exercise_templates": {
    "multiple_choice": {
      "templates": [
        {
          "question": "I _____ speak English.",
          "correct": "can",
          "wrong_options": ["may", "must", "should"],
          "explanation": "表示能力用can"
        },
        {
          "question": "You _____ finish your homework.",
          "correct": "must",
          "wrong_options": ["can", "may", "should"],
          "explanation": "表示必要性用must"
        }
      ]
    },
    "fill_in_blank": {
      "templates": [
        {
          "question": "I _____ speak English.",
          "answer": "can",
          "explanation": "表示能力用can"
        },
        {
          "question": "You _____ study hard.",
          "answer": "should",
          "explanation": "表示建议用should"
        }
      ]
    },
    "meaning_choice": {
      "templates": [
        {
          "question": "选择合适的情态动词：I _____ speak English. (能力)",
          "answer": "can",
          "explanation": "表示能力用can"
        },
        {
          "question": "选择合适的情态动词：You _____ finish your homework. (必要性)",
          "answer": "must",
          "explanation": "表示必要性用must"
        }
      ]
    }
  },
  "learning_objectives": [
    "掌握不同情态动词的具体含义",
