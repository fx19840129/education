{
  "grammar_name": "一般现在时-否定形式",
  "level": "小学四年级",
  "category": "基础语法",
  "difficulty": "easy",
  "description": "学习一般现在时的否定形式：don't/doesn't + 动词原形",
  "explanation": {
    "basic_structure": "主语 + don't/doesn't + 动词原形 + ...",
    "basic_rules": [
      "第一人称（I, we）用don't",
      "第二人称（you）用don't",
      "第三人称单数（he, she, it）用doesn't",
      "第三人称复数（they）用don't",
      "否定句中动词用原形"
    ],
    "memory_tips": [
      "第三人称单数用doesn't，其他都用don't",
      "否定句中动词用原形，不加s或es",
      "记住：doesn't后面动词要还原"
    ],
    "common_errors": [
      "She don't like apples. (错误) → She doesn't like apples. (正确)",
      "He doesn't likes apples. (错误) → He doesn't like apples. (正确)",
      "I doesn't like apples. (错误) → I don't like apples. (正确)"
    ]
  },
  "examples": {
    "first_person": [
      "I don't like coffee.",
      "I don't play video games.",
      "I don't watch TV in the morning.",
      "We don't eat meat.",
      "We don't go to school on Sundays."
    ],
    "second_person": [
      "You don't like vegetables.",
      "You don't play football.",
      "You don't study hard.",
      "You don't live here.",
      "You don't speak Chinese."
    ],
    "third_person_singular": [
      "He doesn't like apples.",
      "She doesn't play video games.",
      "It doesn't rain in summer.",
      "He doesn't eat meat.",
      "She doesn't watch TV."
    ],
    "third_person_plural": [
      "They don't like coffee.",
      "They don't play football.",
      "They don't study hard.",
      "They don't live here.",
      "They don't speak English."
    ],
    "sentences": [
      "I don't like vegetables.",
      "She doesn't play video games.",
      "He doesn't eat meat.",
      "They don't go to school on Sundays.",
      "We don't watch horror movies."
    ]
  },
  "exercise_templates": {
    "multiple_choice": {
      "templates": [
        {
          "question": "She _____ like apples.",
          "correct": "doesn't",
          "wrong_options": ["don't", "isn't", "aren't"],
          "explanation": "第三人称单数用doesn't"
        },
        {
          "question": "I _____ like coffee.",
          "correct": "don't",
          "wrong_options": ["doesn't", "isn't", "aren't"],
          "explanation": "第一人称用don't"
        }
      ]
    },
    "fill_in_blank": {
      "templates": [
        {
          "question": "He _____ like vegetables.",
          "answer": "doesn't",
          "explanation": "第三人称单数用doesn't"
        },
        {
          "question": "We _____ play video games.",
          "answer": "don't",
          "explanation": "第一人称复数用don't"
        }
      ]
    },
    "transformation": {
      "templates": [
        {
          "question": "将肯定句变为否定句：I like apples.",
          "answer": "I don't like apples.",
          "explanation": "第一人称用don't"
        },
        {
          "question": "将肯定句变为否定句：She likes apples.",
          "answer": "She doesn't like apples.",
          "explanation": "第三人称单数用doesn't"
        }
      ]
    },
    "error_correction": {
      "templates": [
        {
          "sentence": "She don't like apples.",
          "error": "don't",
          "correction": "doesn't",
          "explanation": "第三人称单数用doesn't"
        },
        {
          "sentence": "He doesn't likes apples.",
          "error": "likes",
          "correction": "like",
          "explanation": "否定句中动词用原形"
        }
      ]
    }
  },
  "learning_objectives": [
    "掌握一般现在时的否定形式",
    "能够正确使用don't和doesn't",
    "了解否定句中动词用原形"
  ],
  "assessment_criteria": {
    "excellent": "能够熟练使用否定形式，无语法错误",
    "good": "基本掌握否定形式，偶有错误",
    "satisfactory": "了解否定形式，需要加强练习",
    "needs_improvement": "对否定形式不熟悉，需要重新学习"
  }
}
