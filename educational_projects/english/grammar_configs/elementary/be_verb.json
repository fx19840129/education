{
  "grammar_name": "be动词用法",
  "level": "小学三年级",
  "category": "基础语法",
  "difficulty": "easy",
  "description": "be动词是英语中最基本的动词之一，有三个形式：am, is, are",
  "explanation": {
    "basic_rules": [
      "I 用 am",
      "You 用 are",
      "He/She/It 用 is",
      "We/They 用 are",
      "单数名词用 is",
      "复数名词用 are"
    ],
    "negative_form": "be动词 + not",
    "question_form": "Be动词 + 主语 + ...?",
    "common_errors": [
      "I is a student. (错误) → I am a student. (正确)",
      "You is my friend. (错误) → You are my friend. (正确)",
      "He are tall. (错误) → He is tall. (正确)"
    ],
    "usage_tips": [
      "be动词表示状态或身份",
      "be动词后面可以跟形容词、名词或介词短语",
      "在疑问句中，be动词要提前"
    ]
  },
  "examples": {
    "basic": [
      "I am a student.",
      "You are my friend.",
      "He is tall.",
      "She is kind.",
      "It is a cat.",
      "We are happy.",
      "They are students.",
      "The book is interesting.",
      "The dogs are cute."
    ],
    "negative": [
      "I am not a teacher.",
      "You are not my brother.",
      "He is not short.",
      "She is not angry.",
      "It is not a dog.",
      "We are not sad.",
      "They are not teachers.",
      "The book is not boring.",
      "The dogs are not ugly."
    ],
    "questions": [
      "Am I a student?",
      "Are you my friend?",
      "Is he tall?",
      "Is she kind?",
      "Is it a cat?",
      "Are we happy?",
      "Are they students?",
      "Is the book interesting?",
      "Are the dogs cute?"
    ],
    "answers": [
      "Yes, I am. / No, I'm not.",
      "Yes, you are. / No, you're not.",
      "Yes, he is. / No, he isn't.",
      "Yes, she is. / No, she isn't.",
      "Yes, it is. / No, it isn't.",
      "Yes, we are. / No, we're not.",
      "Yes, they are. / No, they aren't.",
      "Yes, it is. / No, it isn't.",
      "Yes, they are. / No, they aren't."
    ]
  },
  "exercise_templates": {
    "multiple_choice": {
      "templates": [
        {
          "question": "_____ a student.",
          "correct": "I am",
          "wrong_options": ["I is", "I are", "I be"],
          "explanation": "第一人称单数用am"
        },
        {
          "question": "She _____ my teacher.",
          "correct": "is",
          "wrong_options": ["am", "are", "be"],
          "explanation": "第三人称单数用is"
        },
        {
          "question": "They _____ students.",
          "correct": "are",
          "wrong_options": ["am", "is", "be"],
          "explanation": "复数主语用are"
        }
      ]
    },
    "fill_in_blank": {
      "templates": [
        {
          "question": "I _____ a student.",
          "answer": "am",
          "explanation": "第一人称单数用am"
        },
        {
          "question": "You _____ my friend.",
          "answer": "are",
          "explanation": "第二人称用are"
        },
        {
          "question": "He _____ tall.",
          "answer": "is",
          "explanation": "第三人称单数用is"
        }
      ]
    },
    "error_correction": {
      "templates": [
        {
          "sentence": "I is a student.",
          "error": "is",
          "correction": "am",
          "explanation": "第一人称单数用am，不用is"
        },
        {
          "sentence": "You is my friend.",
          "error": "is",
          "correction": "are",
          "explanation": "第二人称用are，不用is"
        },
        {
          "sentence": "He are tall.",
          "error": "are",
          "correction": "is",
          "explanation": "第三人称单数用is，不用are"
        }
      ]
    },
    "sentence_creation": {
      "templates": [
        {
          "requirement": "用be动词和形容词'happy'造句",
          "example": "I am happy today.",
          "explanation": "be动词 + 形容词构成系表结构"
        },
        {
          "requirement": "用be动词和名词'teacher'造句",
          "example": "She is a teacher.",
          "explanation": "be动词 + 名词表示身份"
        },
        {
          "requirement": "用be动词和介词短语'in the classroom'造句",
          "example": "We are in the classroom.",
          "explanation": "be动词 + 介词短语表示位置"
        }
      ]
    }
  },
  "learning_objectives": [
    "掌握be动词的基本形式和用法",
    "能够正确使用am, is, are",
    "学会be动词的否定形式和疑问形式",
    "能够在实际语境中正确使用be动词"
  ],
  "assessment_criteria": {
    "excellent": "能够熟练使用be动词的各种形式，无语法错误",
    "good": "基本掌握be动词用法，偶有错误",
    "satisfactory": "了解be动词基本用法，需要加强练习",
    "needs_improvement": "对be动词用法不熟悉，需要重新学习"
  }
